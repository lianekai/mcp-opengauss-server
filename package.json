{
  "name": "mcp-opengauss-server",
  "version": "1.1.0",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "mcp-opengauss": "dist/cli.js"
  },
  "scripts": {
    "build": "tsup src/index.ts src/cli.ts --format esm --dts --out-dir dist",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "security-audit": "npm audit && npm run test",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": ["mcp", "opengauss", "database", "mcp-server", "security"],
  "author": "",
  "license": "MIT",
  "description": "MCP server for openGauss database operations with enhanced security",
  "engines": {
    "node": ">=16"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.21.0",
    "node-opengauss": "^1.1.0",
    "dotenv": "^17.2.3",
    "yargs": "^17.7.2",
    "yargs-parser": "^21.1.1",
    "zod": "^3.25.76",
    "pino": "^9.5.0",
    "pino-pretty": "^11.2.2"
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.0.0",
    "prettier": "^3.3.0",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}

